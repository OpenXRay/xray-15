#include "common.h"
#include "iostructs/p_particle.h"

//////////////////////////////////////////////////////////////////////////////////////////
// Pixel
half4 	_main	( v2p I )
{
	// alpha = 0 	-> color=1
	// alpha = 1	-> color=c
	half4	c 	= I.c*tex2D	(s_base,I.tc0);
	half3 	r 	= lerp(half3(1,1,1),c.xyz,c.w);
	return	half4(r,1);
}

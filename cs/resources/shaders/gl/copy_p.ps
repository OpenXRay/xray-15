#include "common.h"

layout(location = TEXCOORD0) in vec4 vTex0;

layout(location = COLOR0) out vec4 oColor;

//////////////////////////////////////////////////////////////////////////////////////////
// Pixel
//	TODO: OGL: move to load instead of sample (will need to provide integer texture coordinates)
void main ()
{
	//	Perform texture coordinates projection.
	vec4 tc = vTex0;
	tc.xy /= tc.w;

	oColor = texture2D( s_base, tc.xy );
}

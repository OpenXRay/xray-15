	half2(-0.326212f , -0.405810f)*0.68,
	half2(-0.840144f , -0.073580f)*0.92,
	half2(-0.695914f ,  0.457137f)*0.75,
	half2(-0.203345f ,  0.620716f)*0.95,
	half2( 0.962340f , -0.194983f)*0.63,

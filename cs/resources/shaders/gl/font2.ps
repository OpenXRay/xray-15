#include "common.h"

layout(location = TEXCOORD0) in vec2 tc0;	// base
layout(location = COLOR0) in vec4 vColor;

layout(location = COLOR0) out vec4 oColor;

//////////////////////////////////////////////////////////////////////////////////////////
// Pixel
void main ()
{
	half4 r = tex2D	(s_base,tc0);

	r.w = 1 - r.w;

	oColor	= r;
}
